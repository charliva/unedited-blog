<style>
	footer {
		width: 100%;
		margin-bottom: 2rem;
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}
	.container {
		max-width: 80rem;
		margin: 0 auto;
		padding: 0 1rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	.header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 0;
	}
	.branding {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}
	.brand-link {
		font-family: monospace;
		font-size: 1.25rem;
		font-weight: bold;
		color: rgb(75, 85, 99);
		text-decoration: none;
		transition: color 0.3s;
	}
	.brand-link:hover {
		color: var(--primary);
	}
	.tagline {
		font-size: 0.875rem;
		color: rgb(75, 85, 99);
		font-weight: 600;
	}
	.footer-content {
		border-top: 1px solid rgb(229, 231, 235);
		padding: 1rem 0;
	}
	.footer-text {
		display: flex;
		justify-content: space-between;
		align-items: center;
		font-size: 0.875rem;
		color: rgb(107, 114, 128);
		font-weight: 600;
	}
	.social-links {
		display: flex;
		gap: 1rem;
	}
	.link {
		color: rgb(107, 114, 128);
		text-decoration: none;
		transition: color 0.3s;
	}
	.link:hover {
		color: rgb(75, 85, 99);
	}
</style>
